{
  "name": "techviral-ecommerce",
  "version": "1.0.0-production",
  "description": "TechViral E-commerce - Enterprise Grade Production Ready",
  "main": "index.html",
  "scripts": {
    "start": "vite",
    "serve": "http-server . -p 3000 --silent",
    "build": "npm run build:images && vite build && npm run build:sitemap",
    "build:legacy": "tailwindcss -i ./src/input.css -o ./assets/css/tailwind.min.css --minify",
    "build:sitemap": "node scripts/generate-sitemap.js",
    "watch:css": "tailwindcss -i ./src/input.css -o ./assets/css/tailwind.min.css --watch",
    "dev": "vite",
    "test": "node -e \"const {testSuite}=require('./tests/cart.test.js'); testSuite.run().then((success)=>{process.exit(success ? 0 : 1);}).catch(err=>{console.error(err);process.exit(1);});\"",
    "test:playwright": "playwright test --config=docs/testing/test-suite.config.js",
    "test:lighthouse": "lhci autorun --config=docs/testing/lighthouse.config.js",
    "validate": "node scripts/deploy-validation.js",
    "deploy:staging": "npm run validate && echo 'Staging deployment...'",
    "deploy:production": "npm run validate && echo 'Production deployment authorized'",
    "monitor:production": "node assets/js/performance-monitor.js",
    "audit:security": "npm audit --audit-level=high",
    "lint:html": "html-validate \"index.html\" \"pages/**/*.html\" --exclude=\"node_modules/**/*.html\"",
    "lint:css": "stylelint \"assets/css/**/*.css\" --config .stylelintrc.json",
    "optimize:images": "node scripts/optimize-images.js",
    "build:images": "node scripts/optimize-images.js",
    "check:accessibility": "axe-core --include=\"body\" --exclude=\"#third-party\"",
    "qa:validate": "node assets/js/qa-validator.js",
    "browser:test": "node assets/js/browser-tester.js",
    "health:check": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "ecommerce",
    "techviral",
    "performance",
    "seo",
    "accessibility",
    "mobile-first",
    "pwa"
  ],
  "author": "TechViral Team",
  "license": "MIT",
  "devDependencies": {
    "@lhci/cli": "^0.12.0",
    "@playwright/test": "^1.40.0",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@vitejs/plugin-legacy": "^7.2.1",
    "autoprefixer": "^10.4.21",
    "axe-core": "^4.8.2",
    "cssnano": "^7.1.1",
    "glob": "^10.3.10",
    "html-validate": "^8.7.4",
    "http-server": "^14.1.1",
    "imagemin": "^9.0.1",
    "imagemin-mozjpeg": "^10.0.0",
    "imagemin-pngquant": "^10.0.0",
    "imagemin-webp": "^8.0.0",
    "live-server": "^1.2.2",
    "puppeteer": "^24.20.0",
    "stylelint": "^15.11.0",
    "tailwindcss": "^3.4.17",
    "terser": "^5.44.0",
    "vite": "^7.1.5",
    "vite-plugin-html": "^3.2.2",
    "vite-plugin-pwa": "^1.0.3"
  },
  "dependencies": {
    "intersection-observer": "^0.12.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/techviral/ecommerce"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "Firefox ESR",
    "not dead",
    "not ie 11"
  ],
  "lighthouse": {
    "performance": 90,
    "accessibility": 90,
    "best-practices": 85,
    "seo": 95
  },
  "quality-gates": {
    "critical": {
      "lighthouse_performance": 90,
      "lighthouse_seo": 95,
      "lighthouse_accessibility": 90,
      "browser_compatibility": 95,
      "security_scan": 100
    },
    "deployment": {
      "autoRollback": true,
      "healthCheckTimeout": 30000,
      "monitoringEnabled": true
    }
  }
}
